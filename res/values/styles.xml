<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="order_tab">
        <item name="android:textSize">@dimen/order_tab_textsize</item>
        <item name="android:textColor">@color/order_tab_text</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="font_white_smaller">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="order_taxtview">
        <item name="android:textColor">@color/order_tab_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="order_bottom_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:background">@color/order_tab_bg</item>
    </style>

    <style name="order_dialog_msg" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>
    
    
    <!-- width height is match parent -->
    
    <style name="match">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <!-- width height is wrap content -->
    
    <style name="wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
    <!-- 搜索 textview-->
    <style name="search_text_style" parent="@style/wrap">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/order_tab_text</item>
        <item name="android:textSize">@dimen/search_item_text_size</item>
    </style>
    
   
  
            
     <!-- 搜索 下拉图片 -->
     
     <style name="search_image_style" parent="@style/wrap">
        <item name="android:src">@drawable/search_gray</item>
        <item name="android:scaleType">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">27dp</item>
    </style>
        <style name="order_detail_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:background">@color/order_tab_bg</item>
    </style>
    <!--     收藏弹窗效果 -->
      <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@color/list_white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- 省市选择弹窗 -->
      <style name="MyDialog_province" parent="@android:Theme.Light">
        <item name="android:windowBackground">@color/myaccount_province</item><!--背景透明-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item> 
    </style>
  <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>
</resources>