<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/order_title_line_one"
        android:layout_width="fill_parent"
        android:layout_height="7dp"
        android:layout_marginTop="4dp"
        android:background="@color/order_tab_bg" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/order_store"
            style="@style/order_taxtview"
            android:text="黄鹤楼"
            android:textColor="@color/tab_font"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_state"
            style="@style/order_taxtview"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="交易进行中"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView style="@style/order_bottom_line" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/order_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/order_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/order_img"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="的快速减肥了卡斯加豆腐了开始撒娇的付款链接啊是打开了房间阿卡丽师大见付款啦就是的快乐飞加快市领导将付款拉丝机打开了房间阿是考虑到放假了卡斯加的弗兰克就爱上了看到房间卡拉斯剪短发了卡机是老款的风景埃克里斯顿积分卡拉斯觉得可浪费加上可怜的房间卡拉斯 的减肥快乐加快递费骄傲是快乐到家疯了卡斯加打开了房间阿卡丽师大见付款拉丝机的付款链接阿是考虑到将付款拉丝机对方考虑加 "
            android:textColor="@color/order_tab_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="3dp"
            android:text="￥250"
            android:textColor="@color/order_tab_text"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView style="@style/order_bottom_line" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/order_discount_card"
            style="@style/order_taxtview"
            android:text="优惠券："
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_discount"
            style="@style/order_taxtview"
            android:layout_toRightOf="@id/order_discount_card"
            android:text="50" />

        <TextView
            android:id="@+id/order_price"
            style="@style/order_taxtview"
            android:layout_alignParentRight="true"
            android:text="￥250"
            android:textColor="@color/tab_font"
            android:textSize="20sp" />

        <TextView
            style="@style/order_taxtview"
            android:layout_toLeftOf="@id/order_price"
            android:text="实付：" />
    </RelativeLayout>

    <ImageView style="@style/order_bottom_line" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/del_bucket_img"
            android:layout_width="45dp"
            android:layout_height="fill_parent" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/bucket" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp" >

            <TextView
                android:id="@+id/order_pay_online"
                style="@style/order_taxtview"
                android:clickable="true"
                android:gravity="right"
                android:text="线上付款" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView style="@style/order_bottom_line" />

</LinearLayout>