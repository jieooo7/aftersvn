<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="5dp"
    android:background="@color/white_text"
    android:orientation="horizontal" >
    <ScrollView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        
        android:layout_weight="423">
    <TextView 
        android:id="@+id/comments_child_tv0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="现在我们将服务端的项目部署到服务器然后通过在浏览器的地址栏中传递不同的action值来获取相应的JSON数据格式,这样的话浏览器也会显示出请求服务解析好的JSON数据格式。实现好这一步骤之后,我们在服务端的工作也完成了。"
        android:textColor="@color/comments_item"
        android:maxLines="2"
        
        android:textSize="12sp"/>
    </ScrollView>
    <TextView 
        android:id="@+id/comments_child_tv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="181"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/red_title"
        android:textSize="12sp"
        android:text="評論家"
        />
    <TextView
        android:id="@+id/comments_child_tv2" 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="110"
        android:layout_marginTop="5dp"
        android:textColor="@color/comments_item"
        android:textSize="12sp"
        android:text="2分钟前"/>
    

</LinearLayout>
