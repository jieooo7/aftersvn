<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myaccount_line0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"  >
  
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/money"
                    android:textColor="@color/myaccount_text_dark"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/myaccount_recharge_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/myaccount_text_shap"
                    android:gravity="left"
                    android:inputType="numberDecimal"
                    android:hint="0.00"
                    android:maxEms="12"
                    android:maxLines="1"
                    android:minEms="3"
                    android:textColor="@color/myaccount_text_dark"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/yuan"
                    android:textColor="@color/myaccount_text_dark"
                    android:textSize="15sp" />
            </LinearLayout>
            


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/myaccount_recharge_bt"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/myaccount_color"
                    android:text="@string/submit_recharge"
                    android:textColor="@color/myaccount_text_light"
                    android:textSize="15sp" />
            </LinearLayout>
       

</LinearLayout>
