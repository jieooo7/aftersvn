<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/list_white"
    android:orientation="horizontal" >

    
         <ImageView
            android:id="@+id/icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher"
            android:layout_centerVertical="true"
         />
<!--     <LinearLayout
        android:id="@+id/list_ll_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="6dp"
        android:orientation="horizontal" > -->

        <LinearLayout
            android:layout_toRightOf="@id/icon_iv"
            android:layout_marginLeft="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/list_tv_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年年大丰收"
                    android:textColor="@color/tab_font"
                    android:textSize="@dimen/list_tv_store" />

                <TextView
                    android:id="@+id/liset_tv_near"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/list_tv_store"
                    android:text="文造店"
                    android:textColor="@color/order_tab_text"
                    android:textSize="@dimen/liset_tv_near" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/list_tv_xinx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠信息:"
                    android:textColor="@color/tab_font"
                    android:textSize="@dimen/list_tv_xinx" />

                <TextView
                    android:id="@+id/list_tv_Information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/list_tv_xinx"
                    android:text="仅售154，价值304"
                    android:singleLine="true"
                    android:textColor="@color/order_tab_text"
                    android:textSize="@dimen/list_tv_store" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/list_tv_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="仅售154，价值304南中店5人套餐！独特的鱼锅，鲜美的味道。。。。"
                    android:textColor="@color/order_tab_text"
                    android:textSize="@dimen/list_tv_store" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/list_tv_shijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动期间："
                    android:textColor="@color/tab_font"
                    android:textSize="@dimen/list_tv_store" />

                <TextView
                    android:id="@+id/list_tv_endTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/list_tv_shijian"
                    android:text="2004/1/1："
                    android:textColor="@color/order_tab_text"
                    android:textSize="@dimen/list_tv_store" />

                <TextView
                    android:id="@+id/list_tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@+id/list_tv_endTime"
                    android:text="85"
                    android:textColor="@color/order_tab_text"
                    android:textSize="@dimen/list_tv_store" >
                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/list_tv_share"
                    android:src="@drawable/icon_heart" />
            </LinearLayout>
        </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_advance" />

</RelativeLayout>