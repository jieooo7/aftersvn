<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/login_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/order_tab_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/order_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/order_all_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="全部"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/order_all_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/tab_font" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_obligation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/order_obligation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="待付款"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/order_obligation_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/tab_font" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_evaluate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/order_evaluate_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="待评价"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/order_evaluate_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/tab_font" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
