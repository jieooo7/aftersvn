<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_text"
    android:orientation="vertical" >
    
    <!-- 头部标题栏 -->
    <include layout="@layout/login_title"/>

    <!-- 我的收藏详情页 -->

    <RelativeLayout
        android:id="@+id/r0"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/mycollect_unselect" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dp"
            android:gravity="center"
            android:text="@string/coupon_info"
            android:textColor="@color/tab_font"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mycollect_tv0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="27dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/tab_font"
            android:textSize="14sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:footerDividersEnabled="false"
        android:layout_weight="1"
        android:visibility="gone" >
    </ListView>

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/mycollect_unselect" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dp"
            android:gravity="center"
            android:text="@string/dish_coll"
            android:textColor="@color/tab_font"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mycollect_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="27dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/tab_font"
            android:textSize="14sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:footerDividersEnabled="false"
        android:layout_weight="1"
        android:visibility="gone" >
    </ListView>

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/mycollect_unselect" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dp"
            android:gravity="center"
            android:text="@string/res_coll"
            android:textColor="@color/tab_font"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mycollect_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="27dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/tab_font"
            android:textSize="14sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:footerDividersEnabled="false"
        android:layout_weight="1"
        android:visibility="gone" >
    </ListView>

</LinearLayout>